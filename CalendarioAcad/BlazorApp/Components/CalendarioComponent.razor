    }

    .event-indicators {
        position: absolute;
        bottom: 8px;
        display: flex;
        gap: 3px;
        width: 100%;
        justify-content: center;
    }

    .event-indicator {
        width: 20px;
        height: 4px;
        border-radius: 2px;
    }

